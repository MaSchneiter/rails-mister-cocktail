<div class="container">
  <h1><%= @cocktail.name %></h1>

  <h2>Add a dose</h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>

  <%= link_to "See all cocktails", cocktails_path %>
</div>
